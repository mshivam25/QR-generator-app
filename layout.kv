<Function>:
    Screen:
        name :'first'
        MDTopAppBar:
            title: "Quick Response code"
            font_style :'H5'
            pos_hint:{'top':1}
            specific_text_color:0,0,0,1
            elevation :5
        BoxLayout:
            size_hint_y:.1

            padding:'10dp'
            pos_hint: {'center_y':.6}
            MDTextField:
                id :link_text
                icon_right : 'link'
                hint_text: 'Paste your link here'

        BoxLayout:
            size_hint_y:.1
            padding:'10dp'
            pos_hint: {'center_y':.5}
            MDTextField:
                id :image_name
                hint_text: 'Name your Link'

        MDRectangleFlatButton:
            text: 'Make'
            on_release:root.generate_qr_code(root)
            pos_hint: {'center_x':.5,'center_y':.4}

        MDRectangleFlatButton:
            text: 'view image'
            pos_hint: {'center_x':.5,'center_y':.3}
            on_release:root.view_image(root)

    Screen:
        name:'image'
        BoxLayout:
            size_hint_y:.6
            pos_hint: {'center_y':.5}
            padding:10
            Image :
                id:img_

        MDLabel:
            text:'QR code'
            font_style:'H4'
            pos_hint: {'center_y':.9}
            halign:'center'

        MDRectangleFlatButton:
            text: 'make another'
            pos_hint: {'center_x':.5,'center_y':.175}
            on_release:root.make_another(root)





